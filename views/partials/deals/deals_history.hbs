              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <div class="content">
        <div class="container-fluid">
          <div class="row">

                      <!-- Tables -->
          <div class="col-12">
            <!-- 1 sort -->
            <div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">Список Удачных Сделок</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="suc_deals" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Клиент</th>
                            <th>Цена Сделки</th>
                            <th>Скидка</th>
                            <th>Итоговая Цена</th>
                            <th>Дата</th>
                            <th>Оплачено</th>
                            <th>Не Оплачено</th>
                            <th>Подробнее</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each deals}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{ClientId}}</td>
                            <td>{{result_price}}</td>
                            <td>{{cash_discount}}</td>
                            <td>{{final_price}}</td>
                            <td>{{deal_date}}</td>
                            <td>{{paid_cash}}</td>
                            <td> </td>
                            <td><a href="#" class="btn btn-block btn-info btn-sm">Подробнее</a></td>
                        </tr>

                        {{/each}}
                        
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Клиент</th>
                            <th>Общая стоимость</th>
                            <th>Скидка</th>
                            <th>Итоговая стоимость</th>
                            <th>Дата</th>
                            <th>Оплачено</th>
                            <th>Не Оплачено</th>
                            <th>Подробнее</th>
                        </tr>
                    </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->

            
          </div>
          <!-- /.row -->
        </div><!-- /.container-fluid -->
